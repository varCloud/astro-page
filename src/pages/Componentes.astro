---
import { slide } from "astro:transitions";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
const components = [
    {
        title: "Islas",
        className: "text-purple-700",
        body: "Una arquitectura web basada en componentes optimizada para sitios web orientados al contenido.",
    },
    {
        title: "Agnostico a la UI",
        body: "Compatible con React, Preact, Svelte, Vue, Solid, Lit, HTMX, web components y más.",
    },
    {
        title: "Servidor primero",
        className: "text-purple-700",
        body: "Mueve la renderización costosa fuera de los dispositivos de tus visitantes.",
    },
    {
        title: "Cero JS por defecto",
        body: "Menos JavaScript del lado del cliente para no ralentizar tu sitio.",
    },
    {
        title: "Colecciones de contenido",
        className: "text-purple-700",
        body: "Organiza, valida y proporciona seguridad de tipos de TypeScript para tu contenido en Markdown.",
    },
    {
        title: "Colecciones de contenido",
        body: " Tailwind, MDX y cientos de integraciones entre las que elegir.",
    },
];
---

<Layout title="Welcome Componentes Astro.">
    <main transition:animate={slide({ duration: '0.9s' })}>
        <Header title="Componentes Astro" />
        <div class="d-flex px-10 max-w-6xl m-auto text-white">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-2 text-2xl">
                {
                    components.map((item, index) => (
                        <div class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                            <h5
                                class="mb-2 text-2xl font-bold tracking-tight  "
                                class:list={[item.className]}
                            >
                                {item.title}
                            </h5>
                            <p class="font-normal text-gray-700 dark:text-gray-400">
                                {item.body}
                            </p>
                        </div>
                    ))
                }
            </div>
            <div class="flex md:justify-center items-center mt-5">
                <a
                    href="/"
                    class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700"
                    >Atras</a
                >

                <a
                    href="/Islas"
                    class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700"
                    >Siguiente</a
                >
            </div>
        </div>
        <Footer />
    </main>
</Layout>
